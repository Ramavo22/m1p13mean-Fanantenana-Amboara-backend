        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID unique de l'utilisateur"
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur supprime avec succes",
            "content": {
              "application/json": {
                "schema": {
